<%= form_for @card_details do |f| %>
  <%= f.hidden_field :user_id, value: @current_user.id %>
  <%= f.label :card_holder_name %>
  <%= f.text_field :card_holder_name %>
  <br>
  <%= f.label :card_provider %>
  <%= f.text_field :card_provider %>
  <br>
  <%= f.label :card_type %>
  <%= f.text_field :card_type %>
  <br>
  <%= f.submit "#{action}"  %>
<% end %>