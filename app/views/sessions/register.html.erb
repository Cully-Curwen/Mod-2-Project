<div class="container">
        <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
        	<div class="panel panel-default">
        		<div class="panel-heading">
			    		<h3 class="panel-title">Please sign up  <small>It's free!</small></h3>
			 			</div>
			 			<div class="panel-body">
			    		<form role="form"class="new_user" id="new_user" action="/create" accept-charset="UTF-8" method="post">
			    			<%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
                            <div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			                <input type="text" name="user[first_name]" id="user_first_name" class="form-control input-sm" placeholder="First Name">
			    					</div>
			    				</div>
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="text" name="user[last_name]" id="user_last_name" class="form-control input-sm" placeholder="Last Name">
			    					</div>
			    				</div>
			    			</div>

			    			<div class="form-group">
			    				<input type="text" name="user[email]" id="user_email" class="form-control input-sm" placeholder="Email Address">
			    			</div>

			    			<div class="row">
			    				<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="password" name="user[password]" id="user_password"class="form-control input-sm" placeholder="Password">
			    					</div>
			    				</div>
			    				<!--<div class="col-xs-6 col-sm-6 col-md-6">
			    					<div class="form-group">
			    						<input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Pass">
			    					</div>
			    				</div> -->
			    			</div>
			    			<input type="submit" name="commit" value="Register" data-disable-with="Register"class="btn btn-lg btn-primary btn-block">
			    		</form>
			    	</div>
	    		</div>
    		</div>
    	</div>
    </div>